@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- page content -->
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Clientes</h3>
                </div>

                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Go!</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>

            <div class="row">

                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Novo cliente</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a href="#">Settings 1</a>
                                        </li>
                                        <li>
                                            <a href="#">Settings 2</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            @*<h2>Example: Vertical Style</h2>*@

                            <!-- Tabs -->
                            <div id="wizard_verticle" class="form_wizard wizard_verticle">
                                <ul class="list-unstyled wizard_steps">
                                    <li>
                                        <a href="#step-11">
                                            <span class="step_no">1</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#step-22">
                                            <span class="step_no">2</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#step-33">
                                            <span class="step_no">3</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#step-44">
                                            <span class="step_no">4</span>

                                        </a>
                                    </li>
                                </ul>

                                <div id="step-11">
                                    <h2 class="StepTitle">Informação pessoal</h2>
                                    <form class="form-horizontal form-label-left">

                                        <span class="section">Insira as informações pessoais do cliente</span>

                                        <div class="form-group">
                                            <div class="col-md-8 col-sm-8">
                                                <input class="form-control col-md-7 col-xs-12 text-box single-line has-feedback-left camposNormais" data-val="true" data-val-maxlength="The field Nome is limited to 50 characters lenght!" data-val-maxlength-max="50" data-val-required="The field Nome is required!" id="NomeCliente" name="NomeCliente" placeholder="Nome cliente" type="text" value="">
                                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                                                @Html.ValidationMessageFor(model => model.NomeCliente, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-6 col-sm-6">
                                                <input class="date-picker form-control col-md-7 col-xs-12 text-box single-line has-feedback-left camposNormais" data-val="true" data-val-date="The field Data Nascimento must be a date." id="DataNascimentoCliente" name="DataNascimentoCliente" type="date">
                                                <span class="fa fa-birthday-cake form-control-feedback left" aria-hidden="true"></span>

                                            </div>
                                            <div class="col-md-6 col-sm-6">
                                                @Html.EditorFor(model => model.IdadeCliente, new { htmlAttributes = new { @class = "form-control col-md-5 col-xs-5 camposNormais idade", placeholder = "Idade" } })
                                            </div>
                                        </div>

                                        <div class="form-group" data-toggle="tooltip" data-placement="top" title="Estado civil">
                                            <div class="col-md-8 col-sm-8">

                                                @Html.DropDownList("EstadoCivilId", null, htmlAttributes: new { @class = "form-control has-feedback-left estadoCivil", tabindex = "-1" })
                                                <span class="fa fa-angellist form-control-feedback left" aria-hidden="true"></span>
                                            </div>

                                        </div>

                                        <div class="form-group" data-toggle="tooltip" data-placement="top" title="Profissão">
                                            <div class="col-md-8 col-sm-8">
                                                @Html.DropDownList("ProfissaoId", null, htmlAttributes: new { @class = "form-control has-feedback-left profissao" })
                                                <span class="fa fa-group form-control-feedback left" aria-hidden="true" data-toggle="tooltip" data-placement="left" title="Tooltip left"></span>
                                            </div>

                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-12 col-sm-12">
                                                @Html.EditorFor(model => model.ElegivelParaRecrutamento,
                                                  new
                                                  {
                                                      htmlAttributes =
                                                  new { data_toggle = "toggle", data_on = "Recrutar", data_off = "Não recrutar", data_onstyle = "success", data_offstyle = "danger", type = "checkbox" }
                                                  })
                                            </div>
                                        </div>
                                    </form>
                                </div>

                                <div id="step-22">
                                    <h2 class="StepTitle">Contactos</h2>


                                    <span class="section">Insira as informações de contacto do cliente</span>

                                    <div class="form-group">
                                        <div class="col-md-12 col-sm-12">
                                            @Html.EditorFor(model => model.MoradaCliente, new { htmlAttributes = new { @class = "form-control has-feedback-left margemBottom10 novoClienteMorada", placeholder = "Morada" } })

                                            <span class="fa fa-map-o form-control-feedback left" aria-hidden="true"></span>

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-4 col-sm-4">
                                            @Html.EditorFor(model => model.CodigoPostalCliente, new { htmlAttributes = new { @class = "form-control has-feedback-left margemBottom10", placeholder = "CP" } })

                                            <span class="fa fa-map-marker form-control-feedback left" aria-hidden="true"></span>

                                        </div>
                                        <div class="col-md-8 col-sm-8">
                                            @Html.EditorFor(model => model.Localidade, new { htmlAttributes = new { @class = "form-control has-feedback-left margemBottom10", placeholder = "Localidade" } })

                                            <span class="fa fa-map-pin form-control-feedback right" aria-hidden="true"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-6 col-sm-6">
                                            @Html.EditorFor(model => model.TelemovelCliente, new { htmlAttributes = new { @class = "form-control has-feedback-left margemBottom10", placeholder = "Telemóvel", onchange = "OnChangeEvent()" } })
                                            @Html.ValidationMessageFor(model => model.TelemovelCliente, "", new { @class = "text-danger" })
                                            <span class="fa fa-mobile form-control-feedback left" aria-hidden="true"></span>
                                        </div>
                                        <div class="col-md-6 col-sm-6">
                                            @Html.EditorFor(model => model.ContactoAlternativoCliente, new { htmlAttributes = new { @class = "form-control has-feedback-left margemBottom10", placeholder = "Contacto Alternativo" } })
                                            <span class="fa fa-phone form-control-feedback right" aria-hidden="true"></span>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-md-6 col-sm-6">
                                            @Html.EditorFor(model => model.EmailCliente, new { htmlAttributes = new { @class = "form-control has-feedback-left", placeholder = "Email" } })
                                            <span class="fa fa-at form-control-feedback left" aria-hidden="true"></span>

                                        </div>
                                    </div>

                                </div>

                                <div id="step-33">
                                    <h2 class="StepTitle">Notas</h2>
                                    <span class="section">Deseja inserir notas relacionadas com o cliente?</span>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.Obs, new { htmlAttributes = new { @class = "form-control has-feedback-left notas", placeholder = "Notas" } })
                                            <span class="fa fa-comment-o form-control-feedback left" aria-hidden="true"></span>
                                        </div>
                                    </div>
                                </div>

                                <div id="step-44">
                                    <h2 class="StepTitle">Política de privacidade</h2>
                                    <p>
                                        Ao submeter este registo, afirmo que o tratamento de todos os dados que nele constam, foram autorizados pelo cliente, e que serão válidos apenas para campanhas relacionadas com
                                        o objetivo que nos levou a contactar o cliente.
                                    </p>

                                    <p>
                                        Em circunstancia alguma, este contacto será fornecido a terceiros, que não diretamente relacionados com tratamento, manutenção dos objetos tratados pelo âmbito deste serviço.
                                    </p>
                                </div>
                            </div>
                            <!-- End SmartWizard Content -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /page content -->
}



